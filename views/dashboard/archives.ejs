<% extend('../layouts/dashboard-layout') %>
<div class="row justify-content-center">
  <div class="col-md-6">
    <div class="btn-group w-100">
      <a href="/dashboard/archives?status=public" class="btn btn-outline-secondary w-100 rounded-0 <% if(status === 'public') { %>active <%}%> ">已發佈</a>
      <a href="/dashboard/archives?status=draft" class="btn btn-outline-secondary w-100 rounded-0 <% if(status === 'draft') { %>active <%}%>">草稿</a>
      <a href="/dashboard/article/create" class="btn btn-primary">新增文章</a>
    </div>

    <%for(var item in articles){%>
      <div class=" card my-3">
        <h4 class="card-header">
          <%= articles[item].title %>
        </h4>
        <div class="card-body">
          <%- striptags(articles[item].content).slice(0,150) %> ...

          <div>
            <span class="fa fa-clock-o"></span>
            <%- moment(articles[item].update_time * 1000).format('YYYY/MM/DD') %>
            ,
            <span class="fa fa-folder-open-o"></span>
            <span>

              <%var category = articles[item].category %>
              <%= categories[category].name %>

            </span>
          </div>
        </div>
        <div class="card-footer p-0 btn-group">
          <a href="#" class="btn btn-outline-danger rounded-0 deletePost" data-id="<%= articles[item].id %>"
            data-title="<%= articles[item].title %>">刪除</a>
          <a href="/dashboard/article/<%= articles[item].id %>" class="btn btn-outline-secondary w-100 rounded-0">編輯</a>

          <a href="/post/<%= articles[item].id %>" target="_blank"
            class="btn btn-outline-secondary w-100 rounded-0">預覽</a>

        </div>
    </div>
    <%}%>
  </div>
</div>


<%- include('../sections/pagination')%>

    <script src="/javascripts/all.js"></script>